		<script src="js/scripts.js"></script>
		
		<script>
		function ajouterCompetence() {
			var msg='<div class=""><label>Libelle:</label> <input class="form-control" id="libelle_competence" type="text" name="libelle_competence" placeholder="" onchange="" required ></input></div><br>';
			var titre = "Ajout nouvelle competence :"
			
			bootbox.dialog({
			  message: msg,
			  title: titre,
			  buttons: {
				annuler: {
				  label: "Annuler",
				  className: "btn-default",
				  callback: function () {
				  }
				},
				main: {
				  label: "Ajouter",
				  className: "btn-primary",
				  callback: function () {
					var libelle_comp=$( "#libelle_competence" ).val();
					if(libelle_comp != ""){
						window.location = "creerCompetenceLibelle?libelle="+libelle_comp+"&type=1";
					}
					else{
						alert("Champ invalide");
					}
				  }
				}
			  }
			});
		  }
		
		  function mod(v, lib) {
			var idComp = v;
			var libelle = lib;
			var msg='<div class=""><label>Libelle:</label> <input class="form-control" id="libelle_competence" value="'+libelle+'" type="text" name="libelle_competence" placeholder="" onchange="" required ></input></div><br>';
			var titre = "MODIFICATION :"
			
			bootbox.dialog({
			  message: msg,
			  title: titre,
			  buttons: {
				annuler: {
				  label: "Annuler",
				  className: "btn-default",
				  callback: function () {
				  }
				},
				main: {
				  label: "Valider",
				  className: "btn-primary",
				  callback: function () {
						var libelle_comp=$( "#libelle_competence" ).val();
						window.location = "modifierCompetenceLibelle?idCompetence="+idComp+"&libelle="+libelle_comp+"&type=1";
				  }
				}
			  }
			});
		  }
		
		function sup(v) {
			var idComp = v;
			bootbox.dialog({
			  title: "Merci de confirmer",
			  message: "Etes-vous certain de vouloir supprimer?",
			  buttons: {
				supprimer: {
				  label: "Supprimer",
				  className: "btn-primary",
				  callback: function() {
					 window.location = "supprimerCompetenceLibelle?idCompetence="+idComp+"&type=1";
					}
				},
				annuler: {
				  label: "Annuler",
				  className: "btn-info"
				}
			  }
			});
            // The function returns the product of p1 and p2
		}
		
	</script>

