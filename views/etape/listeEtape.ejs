<!DOCTYPE html>

<html lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<meta charset="utf-8">
		<title>Recette - Liste etape</title>
		<meta name="generator" content="Bootply" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<link href="css/bootstrap.min.css" rel="stylesheet">
		<link href="css/styles.css" rel="stylesheet">
    <link href="fonts/css/font-awesome.css" rel="stylesheet">
    <link href="fonts/css/font-awesome.min.css" rel="stylesheet">
	
	<script type="text/javascript" src="js/paging.js"></script>
	
	</head>
	<body onLoad="getLsDossier()">
		<!-- HEADER -->
		<% include ../header.ejs %>
		<!-- /HEADER -->
		<% var disable = "";
		if(req.session.droit == 0){
			disable = "hidden";}
		%>
		<!-- Main -->
		<div class="container-fluid">
			<div class="row">
				<div id="menuCenter">
					<!-- avant container -->
			<% include ../dossierEtapeApp.ejs %>
          </br>
          </br>
             <!-- include menu à gauche -->
					<!-- /avant container-->

					<div class="row">
						<div class="">
							<div class="page-title">
								<div class="title_left">
									<h2>
									  Fiche recette
									  <small>
										Liste des étapes
									  </small>
									</h2>
								</div>
							</div>
							</br>
							<div class="clearfix"></div>
							<div class="row">
							  <div class="col-md-12 col-sm-12 col-xs-12">
								<div class="x_panel">
								  <div class="x_title">
									<div class="clearfix"></div>
								  </div>
								  <div class="x_content">
									<table id="resultsEtape" class="table table-striped table-bordered table-hover table-condensed">
									  <thead>
									  <tr class="headings">
										<th>ID</th>
										<th><i class="fa fa-tag"></i> Libelle </th>
										<th><i class="fa fa-tags"></i> Parent etape </th>
									  </tr>
									  </thead>
									  <tbody>
									  <% etapes.forEach(function(etape){ %>
									  <tr class="even pointer">
										<td class=" "><%= etape.id_etape %></td>
										<td class=" "><%= etape.libelle %></td>
										<td class=" "><%= etape.parent_etape %></td>
									  </tr>
									  <% }); %>
									  </tbody>
									</table>
									<div id="pageNavPosition"></div>
								  </div>
								</div>
							  </div>

							  <br />
							  <br />
							  <br />

							</div>
						</div>
					</div>


					<!-- Notifications -->
					<% include ../notifications.ejs %>
					<!-- /Notifications -->
				</div>
			</div>
		</div>
		<!-- /Main -->
		<!-- Footer -->
		<center><% include ../footer.ejs %></center>
		<!-- /Footer -->

		<!-- script references -->
		<script src="/js/base.min.js"></script>
		<script src="/js/project.min.js"></script>

		<script src="js/jquery.min.js"></script>

		<script src="js/bootstrap.min.js"></script>
		<script src="js/scripts.js"></script>
		
		<script>

		$(document).ready(function(){
			$('#tableDossier').dataTable();
		});

		</script>

		<script type="text/javascript"><!--
        var pager = new Pager('resultsEtape', 12);
        pager.init();
        pager.showPageNav('pager', 'pageNavPosition');
        pager.showPage(1);
    //--></script>
	
	<!-- DOSSIER ETAPE APPLICATION -->
		<script src="js/dossierEtapeApp.js"></script>
	
	</body>
</html>
