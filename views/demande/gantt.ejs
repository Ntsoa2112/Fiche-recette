	//afficher Gantt
	$(function () {
		$.ajax({
		  type: "GET",
		  url: "/AfficherDataGantt",

		  success: function(msg){
			var data = JSON.parse(msg);
			//alert(data);
			
			var mapData = new Map();
			var lastID = 0;
			var mapPers = new Map();
			
			data.forEach(function (projet) {
				if(lastID!=Number(projet.id_personne_dev)){
				  mapPers = new Map();
				  lastID = Number(projet.id_personne_dev);
				  mapData[projet.id_personne_dev] = mapPers;
				}
				mapPers[projet.id_demande] = projet;
			});
			
			var mapDataFinal = new Map();
			var id_temp = 0;
			Object.keys(mapData).forEach(function(key) {
				var temp = mapData[key];
				Object.keys(temp).forEach(function(key2) {
					if(id_temp!=Number(temp[key2].id_personne_dev)){
					  id_temp = temp[key2].id_personne_dev;
					  mapDataFinal[temp[key2].appelation] = mapData[key];
					}
				});
			});
			
			var dataArray = [];
			var i = 1;
			Object.keys(mapDataFinal).forEach(function(key) {
				var seriesData = [];
				var mapDataFinal2 = mapDataFinal[key]; //key = id_personne_dev
				
				if(key !== "Mirah")
				{
					var nom_dossier = "";
					Object.keys(mapDataFinal2).forEach(function(key2) {
						var temp = mapDataFinal2[key2]; //key = id_demande
						
						//date start et end
						var deb = temp.date_demande.toString();
						var debut = deb.substring(0,10);
						var fin = temp.delai;
						
						var debutSplit = debut.split("-");
						var finSplit = fin.split("-");
						
						var demande = { name: temp.num_dossier, start: new Date(Number(debutSplit[0]),Number(debutSplit[1])-1,Number(debutSplit[2])-1), end: new Date(Number(finSplit[0]),Number(finSplit[1])-1,Number(finSplit[2])-1) }; //, color: "#f0f0f0"
						seriesData.push(demande);
					});
				}
				var nameData = key;
				dataArray.push({id: i, name: nameData, series: seriesData});
				i = i+1;
			});
			
			//$("#testData").val(JSON.stringify(dataArray));
			//alert(JSON.stringify(dataArray));
			
